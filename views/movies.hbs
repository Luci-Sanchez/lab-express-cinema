<div class="row row-cols-1 row-cols-md-2 g-4">
  {{#each movies}}
    <div class="col">
      <div class="card">
        <img src="{{this.image}}" class="card-img-top" alt="movies" />
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <a class="btn btn-primary" href="{{this._id}}" role="button">See more</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>